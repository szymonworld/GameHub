<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <!--
        Base application theme for API 21+. This theme replaces
        MyTheme from resources/values/styles.xml on API 21+ devices.
    -->
  <style name="MyTheme" parent="MyTheme.Base">
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="colorPrimary">#333d59</item>
    <item name="colorPrimaryDark">#333d59</item>
    <item name="colorAccent">#FFC107</item>
    <item name="android:textColor">#BDBDBD</item>
    <item name="android:navigationBarColor">#03A9F4</item>
    <item name="android:statusBarColor">#333d59</item>
    <item name="android:windowTranslucentStatus">true</item>
  </style>
  <style name="MyTheme.Splash" parent ="Theme.AppCompat">
    <item name="android:windowBackground">@drawable/splash_screen</item>
    <item name="android:windowNoTitle">true</item>
    <item name="android:windowContentTransitions">true</item>
    <item name="colorPrimary">#000</item>
    <item name="android:windowTranslucentStatus">true</item>
    <item name="android:windowTranslucentNavigation">true</item>
  </style>
</resources>