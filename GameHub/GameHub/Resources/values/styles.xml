<?xml version="1.0" encoding="utf-8" ?>
<resources>
  <style name="MyTheme" parent="MyTheme.Base">
  </style>
  <style name="MyTheme.Base" parent="Theme.AppCompat">
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="colorPrimary">#333d59</item>
    <item name="colorPrimaryDark">#333d59</item>
    <item name="colorAccent">#FFC107</item>
    <item name="android:textColor">#BDBDBD</item>
    <item name="android:navigationBarColor">#03A9F4</item>
    <item name="android:statusBarColor">#333d59</item>
    <item name="android:windowTranslucentStatus">true</item>
  </style>
  <style name="MyTheme.Splash" parent ="Theme.AppCompat">
    <item name="android:windowBackground">@drawable/splash_screen</item>
    <item name="android:windowNoTitle">true</item>
    <item name="colorPrimary">#000</item>
  </style>
  <style name="MyCustomTabLayout" parent="Widget.Design.TabLayout">
    <item name="tabTextAppearance">@style/MyCustomTabLayout</item>
  </style>

  <style name="MyCustomTextAppearance" parent="TextAppearance.Design.Tab">
    <item name="textAllCaps">false</item>
  </style>

  <style name="Widget.CardContent" parent="android:Widget">
    <item name="android:paddingLeft">16dp</item>
    <item name="android:paddingRight">16dp</item>
    <item name="android:paddingTop">24dp</item>
    <item name="android:paddingBottom">24dp</item>
    <item name="android:orientation">vertical</item>
  </style>

  <style name="DarkTheme" parent="Theme.AppCompat">
    <item name="windowNoTitle">true</item>
    <item name="windowActionBar">false</item>
    <item name="colorPrimary">#333d59</item>
    <item name="colorPrimaryDark">#212531</item>
    <item name="colorAccent">#FFC107</item>
    <item name="android:background">#212531</item>
    <item name="android:textColor">#BDBDBD</item>
    <item name="android:navigationBarColor">#03A9F4</item>
  </style>
  <style name="DarkThemeToolbar" parent="DarkTheme">
    <item name="android:background">#333d59</item>
  </style>

  <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
    <item name="colorAccent">#FFC107</item>
    <item name="android:textColorPrimary">#FFFFFF</item>
    <item name="android:background">#333d59</item>
  </style>

